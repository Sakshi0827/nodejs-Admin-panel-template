<%- contentFor('body') %>
<h1>Add New Blog</h1>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Add New Blog </h4>
                        <hr>
                        <!--                    <p class="text-muted m-b-30">Parsley is a javascript form validation library. It helps you provide your users with feedback on their form submission before sending it to your server.</p>-->
                        <form class="" action="/add-blogs" method="post" enctype="multipart/form-data">
                            <!--Company Name-->
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" name="username" class="form-control" required placeholder="User Name" />
                            </div>
<!--                            Blog Title-->
                            <div class="form-group">
                                <label>Blog Title</label>
                                <input type="text" name="blogs_title" class="form-control" required placeholder="Blog Title" />
                            </div>
<!--                            Blog Description-->
                            <div class="form-group">
                                <label>Blog Description</label>
                                <div class="row">
                                    <div class="col-12" style="height:450px;">
                                        <div class="card m-b-20" >
                                            <textarea id="elm1" name="blogs_description"></textarea>
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->
                            </div>
<!--                            Post Date-->
                            <div class="form-group">
                                <label>Post Date</label>
                                <div>
                                    <div class="input-group">
                                        <input type="text" name ="blogs_post_date" class="form-control" placeholder="mm/dd/yyyy" id="datepicker-autoclose">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                        </div>
                                    </div><!-- input-group -->
                                </div>
                            </div>

<!--                            Blog Category-->
                            <div class="form-group">
                                <label class="control-label">Blog Category</label>
                                <select name ="blogs_category_id" class="select2 form-control select2-multiple" multiple="multiple" multiple data-placeholder="Choose ...">
                                    <% data.forEach((blogs_category)=> { %>
                                        <option value=<%= blogs_category.blogs_category_id %> </option> <%= blogs_category.blogs_category_name %> </option>
                                    <% }) %>
                                </select>
                            </div>
<!--                            dropzone-->
<input name="blogs_image" id = "blogs_image" type="file" accept ="image/*">

                            <!-- <div class="row">
                                <div class="col-12">
                                    <label>Blog Image</label>
                                    <div class="card m-b-20">
                                        <div class="card-body"><div class="m-b-30">
                                            <div action="/add-blogs" class="dropzone">
                                                    <div class="fallback">
                                                        <input name="blogs_image" id = "blogs_image" type="file" accept ="image/*">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> -->
                            <hr>
<!--                            submit button-->
                            <div class="form-group">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    <a href="/blogs-list"><input type="button" value="Cancel" class="btn btn-secondary waves-effect m-l-5"></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
    </div>
</div>
