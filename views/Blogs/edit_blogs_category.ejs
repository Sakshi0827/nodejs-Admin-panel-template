

<%- contentFor('HeaderCss') %>
<!-- perticular page css -->
<!-- X-editable css -->
<link type="text/css" href="public/plugins/x-editable/css/bootstrap-editable.css" rel="stylesheet">



<%- contentFor('body') %>
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Edit Blogs Category (<%= data[0].blogs_category_name %>)</h4>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Edit Blogs Category</h4>
                        <br>
                        <form class="" id="edit-blogs-category" data-id="<%= data[0].blogs_category_id %>">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th style="width: 25%;">Attributes</th>
                                    <th>Edit Values</th>
                                </tr>
                                </thead>

                                <tbody>
                                <tr>
                                    <td>Blogs Category Name</td>
                                    <td>
                                        <div class="form-group">
                                            <input type="text" name="blogs_category_name" class="form-control" required placeholder="Blogs Category Name" value="<%= data[0].blogs_category_name%>"/>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                            <div style="text-align: center">
                                <button type="submit"
                                   class="btn btn-success editable-submit btn-sm waves-effect waves-light">
                                    <i class="mdi mdi-check"></i>
                                </button>
                                <a href="/blogs-category"
                                   class="btn btn-danger editable-cancel btn-sm waves-effect waves-light">
                                    <i class="mdi mdi-close"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div> <!-- container-fluid -->

</div> <!-- content -->

<%- contentFor('FooterJs') %>
<!-- XEditable Plugin -->
<script>
    const $form = $('#edit-blogs-category')
    $form.on('submit', submitHandler)
    var blogs_category_id = $form.attr('data-id');

    function submitHandler (e) {
        e.preventDefault()
        $.ajax({
            url: '/edit-blogs-category'+ blogs_category_id,
            type:'PUT',
            data: $form.serialize(),
            success: function (response) {
                alert('Blogs Category edited');
                window.location.href='/blogs-category';
            },
            error: function (error) {
                console.log(error);
            }
        }).done(response => {
            console.log(response)
        })
    }
</script>
<script src="public/plugins/moment/moment.js"></script>

