<%- contentFor('HeaderCss') %>

<link href="public/plugins/bootstrap-touchspin/css/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />

<%- contentFor('body') %>
<h1>Add User</h1>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Add New City</h4>
                        <hr>
                        <form class="" action="/add-city" method="post">
<!--                            Country-->
                            <div class="form-group">
                                <label class="control-label">Country</label>
                                <select name="country_id" class="form-control select2" required>
                                    <option disabled selected hidden>Select</option>
                                    <% data.forEach((country)=> { %>
                                    <option value=<%= country.country_id %> </option> <%= country.country_name %> </option>
                                    <% }) %>
                                </select>
                            </div>
<!--                            State-->
                            <div class="form-group">
                                <label class="control-label">State</label>
                                <select name="state_id" class="form-control select2" required>
                                    <option disabled selected hidden>Select</option>
                                    <% data1.forEach((state)=> { %>
                                    <option value=<%= state.state_id %> </option> <%= state.state_name %> </option>
                                    <% }) %>
                                </select>
                            </div>
                            <!--City Name-->
                            <div class="form-group">
                                <label>City Name</label>
                                <input type="text" name="city_name" class="form-control" required placeholder="State Name" />
                            </div>
                            <div class="form-group">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    <a href="/city"><input type="button" value="Cancel" class="btn btn-secondary waves-effect m-l-5"></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
    </div>
</div>
<%- contentFor('FooterJs') %>
<script src="public/plugins/parsleyjs/parsley.min.js"></script>
<script src="public/plugins/bootstrap-touchspin/js/jquery.bootstrap-touchspin.min.js"></script>

<script>
    $(document).ready(function() {
        $('form').parsley();
    });
</script>
