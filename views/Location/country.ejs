<%- contentFor('HeaderCss') %>
<!-- perticular page css -->

<!-- DataTables -->
<link href="public/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="public/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<!-- Responsive datatable examples -->
<link href="public/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />


<%- contentFor('body') %>

<!-- Start content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Country List</h4>
                </div>
            </div>
        </div>
        <!-- end row -->


        <div class="row">
            <div class="col-12">
                <div class="card m-b-20">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-10"><h4 class="mt-0 header-title">All Countries</h4></div>
                            <div class="col-2">
                                <a href="/add-country"><button type="button" class="btn btn-primary waves-effect waves-light">Add New Country</button></a>
                            </div>
                        </div>
                        <br>
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>id</th>
                                <th>Country Name</th>
                                <th>created_date</th>
                                <th>updated_date</th>
                            </tr>
                            </thead>

                            <tbody>
                            <% data.forEach((country) => {%>
                                <tr>
                                    <th>
                                        <a href="edit-country<%= country.country_id %>"
                                            class="btn btn-info waves-effect waves-light">
                                             edit
                                         </a>
                                        <a href="#" data-id="<%= country.country_id %>"
                                           class="btn btn-danger waves-effect waves-light delete_country">
                                            delete
                                        </a>
                                    </th>
                                    <th scope="row"> <%= country.country_id %></th>
                                    <td><%= country.country_name %></td>
                                    <td><%= country.createdAt %></td>
                                    <td><%= country.updatedAt %></td>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- container-fluid -->
</div> <!-- content -->

<%- contentFor('FooterJs') %>

<script>
    $(document).ready(function(){
        $('.delete_country').click(function (e) {
            $target = $(e.target);
            console.log($target.attr('data-id'));
            const country_id = $target.attr('data-id');
            $.ajax({
                type: 'DELETE',
                url: '/delete-country'+ country_id,
                success: function (response) {
                    alert('Country deleted');
                    window.location.href='/country';
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
    });
</script>

