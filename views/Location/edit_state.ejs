 <!-- XEditable Plugin -->
   <script>
       const $form = $('#edit-state')
       $form.on('submit', submitHandler)
       var state_id = $form.attr('data-id');

       function submitHandler (e) {
           e.preventDefault()
           $.ajax({
               url: '/edit-state'+ state_id,
               type:'PUT',
               data: $form.serialize(),
               success: function (response) {
                   alert('state edited');
                   window.location.href='/state';
               },
               error: function (error) {
                   console.log(error);
               }
           }).done(response => {
               console.log(response)
           })
       }
   </script>
