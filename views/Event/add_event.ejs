<%- contentFor('body') %>
<h1>Add User</h1>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Add New Event </h4>
                        <hr>
                        <form class="" action="/add-event" method="post">
                            <!--Event Title-->
                            <div class="form-group">
                                <label>Event Title</label>
                                <input type="text" name="event_title" class="form-control" required placeholder="Event Title" />
                            </div>
                            <!--Event Description-->
                            <div class="form-group">
                                <label>Event Description</label>
                                <div>
                                    <textarea name="event_description" required class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                            <!-- Single Select-->
                            <div class="form-group">
                                <label class="control-label">Location</label>
                                <select name="event_location" class="form-control select2" required>
                                    <option disabled selected hidden>Select</option>
                                    <% data2.forEach((city)=> { %>
                                    <option value=<%= city.city_id %> </option> <%= city.city_name %> </option>
                                    <% }) %>
                                </select>
                            </div>
                            <!-- Multiple select-->
                            <div class="form-group">
                                <label class="control-label">Event Category</label>
                                <select name ="event_category_id" class="select2 form-control select2-multiple" multiple="multiple" multiple data-placeholder="Choose ...">
                                    <% data.forEach((event_category)=> { %>
                                        <option value=<%= event_category.event_category_id %> </option> <%= event_category.event_category_name %> </option>
                                        <% }) %>
                                </select>
                            </div>
                            <!-- submit button-->
                            <div class="form-group">
                                <div>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    <a href="/event-list"><input type="button" value="Cancel" class="btn btn-secondary waves-effect m-l-5"></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
    </div>
</div>
<%- contentFor('FooterJs') %>
<script src="public/plugins/parsleyjs/parsley.min.js"></script>
