                                </thead>

                                <tr>
                                <tr>
                                    <!--Page user-->
                                    <td>Page Author</td>
                                    <td>
                                        <div class="form-group">
                                            <select name="user_id" id="user_id" class="form-control select2" required>
                                                <% data2.forEach((user)=> {
